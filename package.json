{
  "name": "raml2slate",
  "version": "0.0.5",
  "description": "Render the RAML API spec in the slate documentation layout",
  "homepage": "https://github.com/wdullaer/raml2slate",
  "author": {
    "name": "Wouter Dullaert",
    "email": "wouter.dullaert@gmail.com",
    "url": "https://wdullaer.com"
  },
  "files": [
